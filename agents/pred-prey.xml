<?xml version="1.0"?>

<simulation>
  <control>
    <duration>200</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>0</decay>
  </control>

  <commodity><name>greens</name></commodity>
  <commodity><name>rabbits</name></commodity>
  <commodity><name>wolves</name></commodity>
  <commodity><name>deadwolf</name></commodity>

  <prototype>
    <name>Forest</name>
    <agent>
      <Source>
        <commod_>greens</commod_>
        <recipe_name_>food</recipe_name_>
        <capacity_>1000000</capacity_>
      </Source>
    </agent>
  </prototype>

  <prototype>
    <name>Rabbit</name>
    <agent>
      <Animal>
          <inrecipe_>food</inrecipe_>
          <incommod_>greens</incommod_>
          <outcommod_>rabbits</outcommod_>

          <bufsize_>1</bufsize_>
          <lifespan_>10</lifespan_>
          <birth_freq_>4</birth_freq_>
          <capture_prob_>0.5</capture_prob_>
      </Animal>
    </agent>
  </prototype>

  <prototype>
    <name>Wolf</name>
    <agent>
      <Animal>
          <inrecipe_>food</inrecipe_>
          <incommod_>rabbits</incommod_>
          <outcommod_>deadwolf</outcommod_>

          <bufsize_>1.8</bufsize_>
          <lifespan_>10</lifespan_>
          <birth_freq_>3</birth_freq_>
      </Animal>
    </agent>
  </prototype>

  <prototype>
    <name>Deployer</name>
    <agent>
      <DeployInst>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>1</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>2</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>3</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>4</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>5</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>6</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>7</date> </buildorder>
          <buildorder> <prototype>Rabbit</prototype> <number>50</number> <date>8</date> </buildorder>

          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>4</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>5</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>6</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>7</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>8</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>9</date> </buildorder>
          <buildorder> <prototype>Wolf</prototype> <number>1</number> <date>10</date> </buildorder>
      </DeployInst>
    </agent>
  </prototype>

  <agent> <name>deploy1</name> <prototype>Deployer</prototype> </agent>
  <agent> <name>forest1</name> <prototype>Forest</prototype> </agent>

  <recipe>
    <name>food</name>
    <basis>mass</basis>
    <nuclide> <id>10010000</id><comp>.1</comp></nuclide>
    <nuclide><id>80160000</id><comp>.7</comp></nuclide>
    <nuclide><id>60120000</id><comp>.1</comp></nuclide>
  </recipe>

</simulation>
